[colors]
background = {color0}
foreground = {color15}
active = {color10}
inactive = {color0}
highlight = {color0}
background-time = {color4}
foreground-time = {color15}
background-ws = {color11}
foreground-ws = {color15}
foreground-sp = {color15}
background-sp = {color4}
foreground-xn = {color6}
background-xn = {color7}
foreground-wf = {color4}
background-wf = {color13}
error = {color4}

[bar/main]
override-redirect = false
width = 100%
height = 28
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

background = {color0}00
foreground = {color15}

line-size = 0
label-line-color = #00000000

border-color = #00000000
border-top-size = 12
border-left-size = 12
border-right-size = 12

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0

font-0 = Iosevka Nerd Font:size=8

locale = en_IN.UTF-8
enable-ipc = true

modules-left = time date gap spotify
modules-center = bspwm xwindow
modules-right = battery gap wlan netact gap volume powermenu

tray-position = none
tray-padding = 10
tray-background = ${{colors.inactive}}

[module/gap]
type = custom/text
content = -
content-background = #00000000
content-foreground = #00000000
content-padding = 0

[module/xwindow]
type = internal/xwindow
format-background = ${{colors.background-xn}}
format-foreground = ${{colors.foreground-xn}}
format-padding = 1
label = %title:0:20: ...%

[module/netact]
type = internal/network
interface = wlp7s0
;accumulate-stats = true
interval = 1.0

format-connected = <label-connected>
format-connected-padding = 1
format-connected-background = ${{colors.active}}
format-connected-foreground = ${{colors.foreground}}

format-disconnected =

label-connected = " %downspeed%  %upspeed%"

[module/wlan]
type = internal/network
interface = wlp7s0
interval = 3.0
click-left = nmtui-connect

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
label-connected = %essid%
format-connected-background = ${{colors.background-wf}}
format-connected-foreground = ${{colors.foreground-wf}}

format-disconnected =

ramp-signal-0 = 
ramp-signal-foreground = ${{colors.foreground}}

[module/time]
type = internal/date
interval = 5

time = " %I:%M %p"

format-padding = 1
format-background = ${{colors.background-time}}
format-foreground = ${{colors.foreground-time}}

label = %time%

[module/date]
type = internal/date
interval = 5

date = " %A, %d %B"

format-padding = 1
format-background = ${{colors.background-time}}
format-foreground = ${{colors.foreground-time}}

label = %date%

[module/volume]
type = internal/alsa

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1
format-volume-background = ${{colors.background}}
format-volume-foreground = ${{colors.foreground}}
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-2 = 
ramp-volume-3 = 
ramp-volume-foreground = ${{colors.foreground}}

format-muted-prefix = " "
format-muted-foreground = ${{colors.foreground}}
format-muted-background = ${{colors.error}}
label-muted = MUTE
format-muted-padding = 1

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
full-at = 98

format-charging =   <animation-charging> <label-charging>
format-charging-padding = 1
format-discharging-padding = 1
format-discharging = <ramp-capacity> <label-discharging>
format-full =  <ramp-capacity>
format-full-padding = 1
format-full-background = ${{colors.inactive}}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
ramp-capacity-foreground = ${{colors.foreground}}

animation-charging-foreground = ${{colors.foreground}}
animation-charging-framerate = 500
animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 
format-charging-background = ${{colors.inactive}}
format-discharging-background = ${{colors.active}}

[module/bspwm]
type = internal/bspwm

label-focused = %index%
label-focused-foreground = ${{colors.foreground-ws}}
label-focused-background = ${{colors.background-ws}}
label-focused-underline =  ${{colors.inactive}}
label-focused-padding = 2

format = <label-state> <label-mode>

label-occupied = %index%
label-occupied-padding = 2
label-occupied-underline = ${{colors.highlight}}

label-urgent = %index%!
label-urgent-foreground = ${{colors.foreground-ws}}
label-urgent-background = ${{colors.background-ws}}
label-urgent-underline  = ${{colors.active}}
label-urgent-padding = 2

error: Undefined bar: mian
label-empty = %index%
label-empty-foreground = ${{colors.foreground-ws}}
label-empty-padding = 2

; Separator in between workspaces
; label-separator = |

[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = python ~/.config/polybar/spotify.py -f '{{song}} {{paused}}' -t 60
click-left = dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
format-background = ${{colors.foreground-sp}}
format-foreground = ${{colors.background-sp}}

[module/powermenu]
type = custom/menu

expand-right = false
format-padding = 4
format-spacing = 1
label-active-font = 0

label-open = ⏻ 
label-open-foreground = ${{colors.foreground}}
label-close =  
label-close-foreground = ${{colors.foreground}}
label-separator = |
label-separator-foreground = ${{colors.active}}
label = ${{colors.error}}

menu-0-1 = 
menu-0-1-exec = shutdown -r now

menu-0-0 = "⏻ "
menu-0-0-exec = shutdown -h now

[settings]
screenchange-reload = true

[global/wm]
margin-top = 0
margin-bottom = 0

; vim:ft=dosini
